{
  "title": "Left Command",
  "rules": [
    {
      "description": "Left Command -> Left Command when held and Backspace when tapped",
      "manipulators": [
        {
          "type": "basic",
          "description": "Right Command + Left Command (double tap & hold) -> Repeat Option+Delete (delete word backward)",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "right_command_held",
              "value": 1
            },
            {
              "type": "variable_if",
              "name": "left_command_tapped_once",
              "value": 1
            }
          ],
          "to": [
            {
              "set_variable": {
                "name": "repeat_delete",
                "value": 1
              }
            },
            {
              "key_code": "left_command"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "delete_or_backspace",
              "modifiers": [
                "right_option"
              ]
            }
          ],
          "to_if_held_down": [
            {
              "key_code": "delete_or_backspace",
              "modifiers": [
                "right_option"
              ],
              "repeat": true
            }
          ],
          "to_after_key_up": [
            {
              "set_variable": {
                "name": "repeat_delete",
                "value": 0
              }
            },
            {
              "set_variable": {
                "name": "left_command_tapped_once",
                "value": 0
              }
            }
          ]
        },
        {
          "type": "basic",
          "description": "Right Command + Left Command (first tap) -> Option+Delete once, set double-tap detection",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "conditions": [
            {
              "type": "variable_if",
              "name": "right_command_held",
              "value": 1
            }
          ],
          "to": [
            {
              "key_code": "left_command"
            }
          ],
          "to_if_alone": [
            {
              "set_variable": {
                "name": "left_command_tapped_once",
                "value": 1
              }
            },
            {
              "key_code": "delete_or_backspace",
              "modifiers": [
                "right_option"
              ]
            }
          ],
          "to_delayed_action": {
            "to_if_invoked": [
              {
                "set_variable": {
                  "name": "left_command_tapped_once",
                  "value": 0
                }
              }
            ],
            "to_if_canceled": []
          }
        },
        {
          "type": "basic",
          "description": "Left Command + Right Option -> Cmd+Delete (delete word forward)",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "mandatory": [
                "right_option"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "description": "Left Command + Control -> Option+Delete (delete word backward)",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace",
              "modifiers": [
                "left_option"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "description": "Left Command (alone) -> Left Command when held, Backspace when tapped",
          "from": {
            "key_code": "left_command",
            "modifiers": {
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_command"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "delete_or_backspace"
            }
          ]
        }
      ]
    }
  ]
}
