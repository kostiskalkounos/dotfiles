{
  "title": "Slash",
  "rules": [
    {
      "description": "Change slash to Right Shift when held",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "slash",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "slash"
            }
          ]
        }
      ]
    }
  ]
}
